<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spacesociety">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/s3v_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.spacesociety.FirstScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spacesociety.MenuGrid"
            android:label="@string/title_activity_menu_grid"></activity>
        <activity
            android:name="com.spacesociety.WebActivity"
            android:label="@string/title_activity_website__avtivity"></activity>
        <activity
            android:name="com.spacesociety.PdfFirstScreen"
            android:label="@string/title_activity_pdf_firstscreen"></activity>
        <activity
            android:name="com.spacesociety.RoundImageView"
            android:label="@string/title_activity_round_image_view"></activity>
        <activity
            android:name="com.spacesociety.PdfLibrary"
            android:label="@string/title_activity_pdf_library"></activity>
    </application>

</manifest>
